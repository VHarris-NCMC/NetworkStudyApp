<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- User Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- User Photo -->
        <ImageView
            android:id="@+id/userPhotoImageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_photo"
            android:contentDescription="User Photo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- User Name -->
            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Email Address -->
            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="john.doe@example.com"
                android:textSize="14sp"
                android:textColor="#999999" />
        </LinearLayout>
    </LinearLayout>

    <!-- Billing Indicator -->
    <TextView
        android:id="@+id/billingIndicatorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Billing Status: Not Upgraded"
        android:textSize="16sp"
        android:textColor="#FF0000"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp" />
    <!-- Sign Out Button -->
    <com.google.android.gms.common.SignInButton
        android:id="@+id/accountSignInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="20dp" android:layout_gravity="center_horizontal"

        />
    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />


</LinearLayout>
